<!--            <property name="jakarta.persistence.jdbc.user" value="${db.username}" />-->
<!--            <property name="jakarta.persistence.jdbc.password" value="${db.password}" />-->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />

            <!-- Configuring Hibernate -->
<!--            <property name="hibernate.show_sql" value="${db.show_sql}" />-->
<!--            <property name="hibernate.hbm2ddl.auto" value="${db.ddl}" />-->
        </properties>
    </persistence-unit>
</persistence>